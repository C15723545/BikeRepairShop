<%= form_with(model: staff, local: true) do |form| %>
  <% if staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

      <ul>
      <% staff.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :staff_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :staff_email %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :staff_phone %>
  </div>

  <div class="field">
    <%= form.label :dob %>
    <%= form.date_field :dob, id: :staff_dob %>
  </div>

  <div class="field">
    <%= form.label :pps_no %>
    <%= form.text_field :ppsn, id: :staff_ppsn %>
  </div>

  <div class="field">
    <%= form.label :startdate %>
    <%= form.date_field :startdate, id: :staff_startdate %>
  </div>

  <div class="field">
    <%= form.label :position %>
	<%= form.select :position, ['Mechanic', 'Sales', 'Manager', 'Intern', 'PartTime']%>
  </div>

  <div class="field">
    <%= form.label :salary %>
    <%= form.text_field :salary, id: :staff_salary %>
  </div>
  
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :staff_password %>
  </div>
  
  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :staff_password_confirmation %>
  </div>
  
  <div class="actions">
    <%= form.submit({:class => 'btn btn-primary'}) %>
  </div>
<% end %>