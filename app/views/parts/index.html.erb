<p id="notice"><%= notice %></p>

<h1>Parts List</h1>

<table>
  <thead>
    <tr>
      <th>Part Description</th>
      <th>Price</th>
	  <th>Fitting (mins)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.description %></td>
        <td><%= part.unit_price %></td>
		<td><center><%= (part.wstime * 60) %></center></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Part', new_part_path %><div align="right"><%= will_paginate @parts %></div>
