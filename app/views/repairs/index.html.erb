<p id="notice"><%= notice %></p>

<h2>Repairs List</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Quote.</th>
      <th>Lab.</th>
      <th>Total.</th>
      <th>Customer</th>
      <th>Status</th>
      <th>Req. by</th>
      <th>Desc.</th>
      <th>Type</th>
      <th>Details</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.date_out %></td>
        <td><%= repair.cost_quote %></td>
        <td><%= repair.labour_cost %></td>
        <td><%= repair.total_cost %></td>
        <td><%= repair.customer.name %></td>
        <td><%= repair.job.status %></td>
        <td><%= repair.required_date %></td>
        <td><%= repair.description %></td>
        <td><%= repair.repair_type %></td>
        <td><%= repair.repair_detail %></td>
		<td><%= image_tag repair.repair_photo, :size => "50x50" %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
