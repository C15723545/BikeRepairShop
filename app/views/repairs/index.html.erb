<h1>Repairs List</h1>

<table>
  <thead>
    <tr>
      <th>Date out</th>
      <th>Quoted</th>
      <th>Fitting</th>
      <th>Total cost</th>
      <th>Details</th>
      <th>Customer</th>
	  <th>Customer Bike</th>
      <th>Discount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.date_out %></td>
        <td><%= repair.cost_quote %></td>
        <td><%= repair.labour_cost %></td>
        <td><%= repair.total_cost %></td>
        <td><%= repair.repair_detail %></td>
        <td><%= repair.customer.name %></td>
		<td><%= repair.customer.name %></td>
        <td><%= repair.discount.level %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
